# Copy this file to .env and edit values before running

# Environment
NODE_ENV=development
ENV=DEV

# Ports
FRONTEND_PORT=3000
COLLAB_PORT=8001
MATCHING_PORT=8002
QUESTION_PORT=8003
HISTORY_PORT=8005
USER_PORT=8004
MONGO_PORT=27017

# MongoDB URIs
# Local (docker-compose mongodb):
DB_LOCAL_URI=mongodb://mongodb:27017/peerprep
# Per-service local URIs (optional)
QUESTION_DB_LOCAL_URI=mongodb://mongodb:27017/peerprepQuestionServiceDB
USER_DB_LOCAL_URI=mongodb://mongodb:27017/peerprepUserServiceDB
HISTORY_DB_LOCAL_URI=mongodb://mongodb:27017/peerprepHistoryServiceDB

# Cloud / Atlas (replace <user>, <pass>, <cluster>, <dbname>)
DB_CLOUD_URI=mongodb+srv://<user>:<pass>@<cluster>.mongodb.net/<dbname>?retryWrites=true&w=majority
QUESTION_DB_CLOUD_URI=mongodb+srv://<user>:<pass>@<cluster>.mongodb.net/peerprepQuestionServiceDB?retryWrites=true&w=majority
USER_DB_CLOUD_URI=mongodb+srv://<user>:<pass>@<cluster>.mongodb.net/peerprepUserServiceDB?retryWrites=true&w=majority
HISTORY_DB_CLOUD_URI=mongodb+srv://<user>:<pass>@<cluster>.mongodb.net/peerprepHistoryServiceDB?retryWrites=true&w=majority

# Authentication
JWT_SECRET=your_jwt_secret_here
COLLAB_INTERNAL_TOKEN=dev-internal-token

# RabbitMQ
RABBITMQ_USER=admin
RABBITMQ_PASS=admin
RABBITMQ_PORT=5672
RABBITMQ_MGMT_PORT=15672
RABBITMQ_URL=amqp://admin:admin@rabbitmq:5672

# AI / Gemini (Google Generative AI)
# Provide your Gemini / Google Cloud generative AI API key here
GEMINI_API_KEY=your_gemini_api_key_here
AI_PROVIDER=gemini
AI_MODEL=gemini-2.5-flash
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=1000
AI_RATE_LIMIT=10
AI_RATE_WINDOW=60000

# Service discovery / internal URLs (used when running via docker compose)
USER_SERVICE_URL=http://user-service:8004
QUESTION_SERVICE_URL=http://question-service:8003
HISTORY_SERVICE_URL=http://history-service:8005
MATCHING_SERVICE_URL=http://matching-service:8002
COLLAB_SERVICE_URL=http://collaboration-service:8001

# Optional: timeouts and logging
REQUEST_TIMEOUT=10000
LOG_LEVEL=info
